@model IEnumerable<workForum.Models.Album>

@{
    ViewData["Title"] = "Photo";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}


<h2>相片</h2>

<p>
    <a asp-action="Create">上傳照片</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/images/@item.FileName" width="300" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.ActionLink("刪除", "Delete", new { id = item.Alb_Id }, new { @class = "btn btn-danger", onclick = "return confirm('你確定要刪除嗎 ?')" })
            </td>
        </tr>
    }
</table>
