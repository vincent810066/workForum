@model workForum.Models.Message
@{
    ViewData["Title"] = "留言版";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
<h1>留言版</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Board">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                我要留言: @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <input type="submit" value="送出" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">回首頁</a>
</div>
